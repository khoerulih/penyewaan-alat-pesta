<table id="example2" class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>No</th>
      <th>Nama Pelanggan</th>
      <th>Alamat</th>
      <th>No Telepon</th>
      <th>Aksi</th>
    </tr>
  </thead>
  <tbody>
    <% for(let i = 0; i < pelanggan.length; i++) { %>
    <tr>
      <td><%= i + 1 %></td>
      <td><%= pelanggan[i].nama %></td>
      <td><%= pelanggan[i].alamat %></td>
      <td><%= pelanggan[i].noTelepon %></td>
      <td>
        <form
          action="/pelanggan/delete/<%= pelanggan[i]._id %>?_method=DELETE"
          method="POST"
        >
          <a
            href="/pelanggan/edit/<%= pelanggan[i]._id %>"
            class="btn btn-warning text-white btn-sm"
          >
            <i class="fas fa-pencil-alt"></i>
            Ubah
          </a>
          <button class="btn btn-danger btn-sm">
            <i class="fas fa-trash"></i>
            Hapus
          </button>
        </form>
      </td>
    </tr>
    <% } %>
  </tbody>
</table>
